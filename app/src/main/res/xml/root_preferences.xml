<androidx.preference.PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
            app:title="@string/reminder_setting">
        <SwitchPreferenceCompat
                app:key="release_reminder"
                app:title="@string/title_release_reminder"
                app:summary="@string/description_release_reminder"
        />
        <SwitchPreferenceCompat
                app:key="daily_reminder"
                app:title="@string/title_daily_reminder"
                app:summary="@string/description_daily_reminder"
        />
    </PreferenceCategory>

    <PreferenceCategory
            app:title="@string/language_setting"
    >
        <Preference
                app:key="choose_language"
                app:title="@string/choose_language_menu"
        />
    </PreferenceCategory>

</androidx.preference.PreferenceScreen>
