<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_item_movie_tv_show"
        app:cardCornerRadius="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="135dp"
                android:layout_height="203dp"
                app:srcCompat="@drawable/poster_spiderman"
                android:id="@+id/img_poster"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                tools:srcCompat="@drawable/poster_spiderman"
                android:contentDescription="@string/img_movie_tv_show_poster_description"
                app:layout_constraintBottom_toBottomOf="@+id/tv_description"/>
        <TextView
                android:text="@string/title_movie_tv_show"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/img_poster"
                android:layout_marginStart="16dp"
                tools:text="@string/title_movie_tv_show"
                android:textAlignment="viewStart"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textColor="#000000"
                android:contentDescription="@string/title_movie_tv_show_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textSize="24sp"/>
        <TextView
                android:text="@string/movie_tv_show_release_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_release_date"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                tools:text="@string/movie_tv_show_release_date"
                app:layout_constraintStart_toEndOf="@+id/img_poster"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:contentDescription="@string/movie_tv_show_release_date_description"/>
        <TextView
                android:text="@string/lorem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_description"
                app:layout_constraintStart_toEndOf="@+id/img_poster"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_release_date"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                tools:text="@string/lorem"
                android:lineSpacingExtra="0.5sp"
                android:ellipsize="end" android:maxLines="6"
                android:contentDescription="@string/movie_tv_show_overview_description"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>