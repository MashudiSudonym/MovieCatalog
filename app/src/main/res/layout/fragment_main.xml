<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.main.MainFragment"
        android:id="@+id/layout_main">
    <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_conversion_absoluteHeight="659dp"
            tools:layout_conversion_absoluteWidth="411dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">
        <com.google.android.material.tabs.TabLayout
                android:id="@+id/layout_tab_main"
                style="@style/Widget.MaterialComponents.TabLayout.Colored"
                app:tabIndicatorColor="@android:color/black"
                app:tabIndicatorFullWidth="true"
                app:tabTextColor="@android:color/black"
                app:tabGravity="fill"
                app:tabIndicatorGravity="bottom"
                app:tabMode="fixed"
                app:tabMaxWidth="0dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" tools:layout_conversion_absoluteHeight="48dp"
                tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp"
                tools:layout_conversion_absoluteWidth="411dp"/>
    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>