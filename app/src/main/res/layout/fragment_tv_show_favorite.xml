<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="tvShowFavoriteViewModel"
                type="c.dicodingmade.ui.tvshowfavorite.TvShowFavoriteViewModel"/>
    </data>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_tv_show_favorite"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:refreshing="@{safeUnbox(tvShowFavoriteViewModel.refreshStatus)}"
            app:onRefreshListener="@{() -> tvShowFavoriteViewModel.onRefresh()}"
    >
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".ui.tvshowfavorite.TvShowFavoriteFragment"
                android:id="@+id/layout_tv_show_favorite">
            <androidx.recyclerview.widget.RecyclerView
                    app:apiStatusRecyclerViewErrorConnection="@{tvShowFavoriteViewModel.statusConnectionView}"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:id="@+id/rv_tv_show_favorite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clipToPadding="false"
                    android:padding="6dp"
                    app:listDataContent="@{tvShowFavoriteViewModel.tvShowFavorites}"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="16"
                    tools:listitem="@layout/item_list_content"
            >
            </androidx.recyclerview.widget.RecyclerView>
            <ImageView
                    app:statusImageFavoritePage="@{tvShowFavoriteViewModel.statusConnectionView}"
                    android:layout_width="256dp"
                    android:layout_height="256dp"
                    android:id="@+id/img_status_connection_tv_show_favorite"
                    tools:srcCompat="@drawable/ic_favorite_true"
                    android:contentDescription="@string/img_description"
                    app:srcCompat="@drawable/ic_favorite_true"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            <ProgressBar
                    app:apiStatusProgressBar="@{tvShowFavoriteViewModel.statusConnectionView}"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress_bar_tv_show_favorite"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintVertical_bias="0.0254"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>