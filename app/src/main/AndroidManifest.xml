<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="c.dicodingmade">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <permission
            android:name="c.dicodingmade.DicodingMadeApplication.READ_DATABASE"
            android:protectionLevel="normal"/>
    <permission
            android:name="c.dicodingmade.DicodingMadeApplication.WRITE_DATABASE"
            android:protectionLevel="normal"/>

    <application
            android:name=".DicodingMadeApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme.NoActionBar"
            tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
                android:name=".ui.setting.SettingsActivity"
                android:label="@string/settings"
                android:parentActivityName=".ui.MainActivity">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="c.dicodingmade.ui.MainActivity"/>
        </activity>

        <receiver android:name=".ui.widget.FavoriteWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE"/>
            </intent-filter>

            <meta-data
                    android:name="android.appwidget.provider"
                    android:resource="@xml/favorite_widget_info"/>
        </receiver>

        <service
                android:name=".service.FavoriteWidgetService"
                android:exported="false"
                android:permission="android.permission.BIND_REMOTEVIEWS"/>

        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
                android:name=".provider.DicodingMadeContentProvider"
                android:authorities="c.dicodingmade.DicodingMadeApplication"
                android:exported="true"
                android:syncable="true"
                android:readPermission="c.dicodingmade.DicodingmadeApplication.READ_DATABASE"
                android:writePermission="c.dicodingmade.DicodingmadeApplication.WRITE_DATABASE"/>

        <receiver android:name=".receiver.ReleaseNotificationReceiver"
                  android:enabled="true"
                  android:exported="false"/>

        <receiver android:name=".receiver.DailyNotificationReceiver"
                  android:enabled="true"
                  android:exported="false"/>
    </application>

</manifest>